<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_white_coner"
        android:layout_marginEnd="12dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp">

            <com.lib.kit.view.RoundImageView
                android:id="@+id/avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/temp_live_avatar"
                app:radus="5dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:text="@string/finished"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:background="@drawable/bg_gray_status_coner"
                android:layout_height="wrap_content"/>
        </FrameLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/app_black_l"
                android:textSize="16sp"
                tools:text="双十一大回馈" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/start_time_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/app_gray_59"
                android:textSize="13sp"
                tools:text="开播时间: 2020-03-03 12:00" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/finish_time_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/app_gray_59"
                android:textSize="13sp"
                tools:text="结束时间: 2020-03-03 12:00" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/live_duration"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:maxLines="1"
                    android:textColor="@color/app_gray_59"
                    android:textSize="13sp"
                    tools:text="直播时长: 30分钟" />

                <com.lib.kit.view.LimitButton
                    android:id="@+id/lmbDelete"
                    android:layout_width="30dp"
                    app:NormalSrc="@mipmap/ic_delete"
                    app:Iv_Width="@dimen/length_mine_live_btn"
                    android:layout_marginEnd="6dp"
                    android:layout_marginStart="15dp"
                    app:Iv_Height="@dimen/length_mine_live_btn"
                    android:layout_height="30dp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>